# Azure settings
ACR_NAME=whisperacr
RESOURCE_GROUP=whisper-rg
ACI_NAME=whisper-api
LOCATION=eastus
DNS_LABEL=whisper-api-demo

# Docker
DOCKER_IMAGE=whisper-api:latest

# Whisper API environment
WHISPER_MODEL=openai/whisper-medium
WHISPER_DEVICE=cpu
CHUNK_SEC=60
WORKER_COUNT=4
PYTHONDONTWRITEBYTECODE=1
PYTHONUNBUFFERED=1
TRANSFORMERS_CACHE=/app/.cache/huggingface
# Azure Container Instance settings
ACI_CPU=2
ACI_MEMORY=4
